<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    
    <t t-name="pos_sale_journal_selection.PaymentScreen" 
       t-inherit="point_of_sale.PaymentScreen" 
       t-inherit-mode="extension" 
       owl="1">
       
        <!-- Agregar selector DESPUÃ‰S de los controles de pago -->
        <xpath expr="//div[hasclass('payment-controls')]" position="after">
            
            <!-- SIEMPRE visible, sin condiciones -->
            <div class="paymentmethods" t-if="saleJournals.length > 0">
                <p class="title-category">DIARIO DE FACTURA</p>
                
                <t t-foreach="saleJournals" t-as="journal" t-key="journal.id">
                    <div class="button paymentmethod"
                         t-att-class="{ 'highlight': journal.id === currentJournalId }"
                         t-on-click="() => this.selectSaleJournal(journal)">
                        <div class="payment-name">
                            <t t-esc="journal.name"/>
                        </div>
                    </div>
                </t>
                
            </div>
            
        </xpath>
    </t>

</templates>